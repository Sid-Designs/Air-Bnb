<% if(success && success.length>0) { %>
<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-9">
      <div
        class="alert alert-warning alert-dismissible fade show bg-success text-light"
        role="alert"
      >
        <%= success %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    </div>
  </div>
</div>

<% } %> <% if(error && error.length>0) { %>
<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-9">
      <div
        class="alert alert-warning alert-dismissible fade show bg-danger text-light"
        role="alert"
      >
        <%= error %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    </div>
  </div>
</div>

<% } %>
